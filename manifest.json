{
    "manifest_version": 2,
    "name": "Sticky Notes",
    "version": "1.0",
    "description": "Uses like as a Sticky Notes",
    "permissions": [
        "storage",
        "tabs",
        "notifications",
        "contextMenus",
        "unlimitedStorage"
    ],

    "browser_action": {
         "default_icon": "icons/16.png",
        "default_title": "Click Me Here",
        "default_popup": "/popup.html"
    },

    "background": {
        "scripts": ["/scripts/eventPage.js"],
        "persistent": false
    },
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }

}